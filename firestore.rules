rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== CARTES PUBLIQUES ====================
    // Accessible en lecture par tout le monde (pour le partage web/NFC)
    // Écriture uniquement par les utilisateurs authentifiés
    match /public_cards/{cardId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ==================== TEMPLATES PUBLICS ====================
    // Accessible en lecture par tout le monde (pour le partage web/NFC)
    // Écriture uniquement par les utilisateurs authentifiés
    match /public_templates/{templateId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ==================== VUES DE TEMPLATES ====================
    // Tout le monde peut créer une vue (pour enregistrer les statistiques)
    match /template_views/{viewId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // ==================== VUES DE CARTES ====================
    // Tout le monde peut créer une vue (pour enregistrer les statistiques)
    // Lecture/mise à jour uniquement par les utilisateurs authentifiés
    match /card_views/{viewId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // ==================== UTILISATION IA ====================
    // Chaque utilisateur peut lire/écrire ses propres données d'utilisation
    match /ai_usage/{usageId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Compteurs mensuels d'utilisation IA
    match /ai_usage_monthly/{monthId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
    }

    // ==================== AUTRES COLLECTIONS ====================
    // Accès uniquement pour les utilisateurs authentifiés
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

  }
}
