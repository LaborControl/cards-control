<?xml version="1.0" encoding="utf-8"?>
<host-apdu-service xmlns:android="http://schemas.android.com/apk/res/android"
    android:description="@string/hce_service_description"
    android:requireDeviceUnlock="false"
    android:apduServiceBanner="@drawable/ic_launcher">

    <!-- AID pour NDEF Type 4 Tag (standard NFC Forum) -->
    <aid-group
        android:category="other"
        android:description="@string/hce_aid_group_description">

        <!-- NDEF Tag Application AID (7 bytes: D2760000850101) -->
        <aid-filter android:name="D2760000850101" />

        <!-- NFC Pro Business Card AID -->
        <aid-filter android:name="F04E464350524F" />

    </aid-group>

</host-apdu-service>
